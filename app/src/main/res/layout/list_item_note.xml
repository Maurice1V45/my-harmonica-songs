<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/view_note"
        android:layout_width="@dimen/bu4"
        android:layout_height="@dimen/bu5_5"
        android:layout_margin="@dimen/bu0_25"
        android:background="@drawable/selector_note"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_48px" />

        <TextView
            android:id="@+id/text_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="every"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20px" />
    </LinearLayout>

</RelativeLayout>
