<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/view_note"
        android:layout_width="@dimen/bu4"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_upper_note"
            android:layout_width="@dimen/bu3"
            android:layout_height="@dimen/bu3"
            android:layout_marginTop="@dimen/bu0_5"
            android:background="@drawable/white_bordered_sounded_shape_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_48px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bu2_5"
            android:layout_marginBottom="@dimen/bu0_5"
            android:layout_marginTop="@dimen/bu0_5"
            android:background="@color/greyAA">

            <View
                android:layout_width="@dimen/bu2"
                android:layout_height="@dimen/bu2"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/bu0_5"
                android:layout_marginTop="@dimen/bu0_5"
                android:background="@color/black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_lower_note"
            android:layout_width="@dimen/bu3"
            android:layout_height="@dimen/bu3"
            android:layout_marginBottom="@dimen/bu0_5"
            android:background="@drawable/white_bordered_sounded_shape_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="-4"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_48px" />

    </LinearLayout>

</LinearLayout>
