<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bu0_33"
        android:layout_marginTop="@dimen/bu0_33"
        android:background="@drawable/selector_song_list_item"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/icon_song"
            android:layout_width="@dimen/bu5"
            android:layout_height="@dimen/bu5">

            <TextView
                android:id="@+id/text_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_80px"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/view_separator"
            android:layout_width="1dp"
            android:layout_height="@dimen/bu3_5"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon_song"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/bu1"
            android:layout_marginRight="@dimen/bu3"
            android:layout_toRightOf="@+id/view_separator"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36px" />

            <TextView
                android:id="@+id/text_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_26px"
                android:textStyle="italic" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_more"
            android:layout_width="@dimen/bu3"
            android:layout_height="@dimen/bu5"
            android:layout_alignParentRight="true"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/bu1_5"
                android:layout_height="@dimen/bu1_5"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/bu0_33"
                android:src="@drawable/selector_dots" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
