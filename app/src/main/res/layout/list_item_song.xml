<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bu0_5"
        android:layout_marginLeft="@dimen/bu1"
        android:layout_marginRight="@dimen/bu1"
        android:layout_marginTop="@dimen/bu0_5"
        android:background="@drawable/white_bordered_rounded_shape"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/icon_song"
            android:layout_width="@dimen/bu5"
            android:layout_height="@dimen/bu5">

            <ImageView
                android:layout_width="@dimen/bu3"
                android:layout_height="@dimen/bu3"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_note" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/bu5"
            android:layout_toRightOf="@+id/icon_song"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_40px" />

            <TextView
                android:id="@+id/text_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30px" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_more"
            android:layout_width="@dimen/bu5"
            android:layout_height="@dimen/bu5"
            android:layout_alignParentRight="true"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/bu3"
                android:layout_height="@dimen/bu3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_dots" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
