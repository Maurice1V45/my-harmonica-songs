<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/bu4"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_upper_note_bend2"
        android:layout_width="@dimen/bu3"
        android:layout_height="@dimen/bu3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bu0_5"
        android:clickable="true"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/text_size_42px" />

    <TextView
        android:id="@+id/text_upper_note_bend1"
        android:layout_width="@dimen/bu3"
        android:layout_height="@dimen/bu3"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/bu0_5"
        android:layout_marginTop="@dimen/bu0_5"
        android:clickable="true"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/text_size_42px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greyEE">

        <View
            android:id="@+id/border_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/text_upper_note"
            android:layout_width="@dimen/bu3"
            android:layout_height="@dimen/bu3"
            android:layout_below="@+id/border_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bu0_5"
            android:clickable="true"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/text_size_42px" />

        <RelativeLayout
            android:id="@+id/view_middle_hole"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bu2_5"
            android:layout_below="@+id/text_upper_note"
            android:layout_marginBottom="@dimen/bu0_5"
            android:layout_marginTop="@dimen/bu0_5"
            android:background="@color/greyAA">

            <View
                android:layout_width="@dimen/bu2"
                android:layout_height="@dimen/bu2"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/bu0_5"
                android:layout_marginTop="@dimen/bu0_5"
                android:background="@color/black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_lower_note"
            android:layout_width="@dimen/bu3"
            android:layout_height="@dimen/bu3"
            android:layout_below="@+id/view_middle_hole"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/bu0_5"
            android:clickable="true"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/text_size_42px" />

        <View
            android:id="@+id/border_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text_lower_note"
            android:background="@color/black" />

        <View
            android:id="@+id/border_left"
            android:layout_width="1dp"
            android:layout_height="128dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/black" />

        <View
            android:id="@+id/border_right"
            android:layout_width="1dp"
            android:layout_height="@dimen/bu10_5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_lower_note_bend1"
        android:layout_width="@dimen/bu3"
        android:layout_height="@dimen/bu3"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/bu0_5"
        android:layout_marginTop="@dimen/bu0_5"
        android:clickable="true"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/text_size_42px" />

    <TextView
        android:id="@+id/text_lower_note_bend2"
        android:layout_width="@dimen/bu3"
        android:layout_height="@dimen/bu3"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/bu0_5"
        android:clickable="true"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/text_size_42px" />

    <TextView
        android:id="@+id/text_lower_note_bend3"
        android:layout_width="@dimen/bu3"
        android:layout_height="@dimen/bu3"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/bu0_5"
        android:clickable="true"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/text_size_42px" />
</LinearLayout>
