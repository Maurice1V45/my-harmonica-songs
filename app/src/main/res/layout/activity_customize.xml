<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_background"
    android:orientation="vertical"
    tools:context="com.mivas.myharmonicasongs.SettingsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black_30"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarBackArrow"
        app:title="@string/customize_activity_text_customize"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bu1_5"
                android:layout_marginTop="@dimen/bu2"
                android:text="@string/customize_activity_text_tablature"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_30px"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/view_blow_note"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bu5"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bu1_5"
                    android:text="@string/customize_activity_text_blow_note"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_34px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_draw_note"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bu5"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bu1_5"
                    android:text="@string/customize_activity_text_draw_note"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_34px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_section"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bu5"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bu1_5"
                    android:text="@string/customize_activity_text_section"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_34px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_section_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bu5"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bu1_5"
                    android:text="@string/customize_activity_text_section_bar"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_34px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_background_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bu5"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bu1_5"
                    android:text="@string/customize_activity_background_color"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_34px" />

                <View
                    android:id="@+id/view_background_color_color"
                    android:layout_width="@dimen/bu4"
                    android:layout_height="@dimen/bu4"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bu1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_16_numbers_chromatic_notation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/bu1_5"
                    android:layout_marginRight="@dimen/bu5"
                    android:layout_marginTop="@dimen/bu1_5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_16_numbers_chromatic_notation"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_34px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_16_numbers_chromatic_notation_description"
                        android:textColor="@color/grey77"
                        android:textSize="@dimen/text_size_28px" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_16_numbers_chromatic_notation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bu1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bu1_5"
                android:layout_marginTop="@dimen/bu2"
                android:text="@string/customize_activity_text_general"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_30px"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/bu1_5"
                    android:layout_marginRight="@dimen/bu5"
                    android:layout_marginTop="@dimen/bu1_5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_play_note_sound"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_34px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_play_note_sound_description"
                        android:textColor="@color/grey77"
                        android:textSize="@dimen/text_size_28px" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_play_note_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bu1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_show_bends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/bu1_5"
                    android:layout_marginRight="@dimen/bu5"
                    android:layout_marginTop="@dimen/bu1_5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_always_show_bends"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_34px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_always_show_bends_description"
                        android:textColor="@color/grey77"
                        android:textSize="@dimen/text_size_28px" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_show_bends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bu1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_show_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/bu1_5"
                    android:layout_marginRight="@dimen/bu5"
                    android:layout_marginTop="@dimen/bu1_5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_always_show_button"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_34px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_always_show_button_description"
                        android:textColor="@color/grey77"
                        android:textSize="@dimen/text_size_28px" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_show_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bu1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bu1_5"
                android:layout_marginTop="@dimen/bu2"
                android:text="@string/customize_activity_text_media_player"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_30px"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/bu1_5"
                    android:layout_marginRight="@dimen/bu5"
                    android:layout_marginTop="@dimen/bu1_5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_always_show_media_player"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_34px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_always_show_media_player_description"
                        android:textColor="@color/grey77"
                        android:textSize="@dimen/text_size_28px" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_show_media_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bu1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/bu1_5"
                    android:layout_marginRight="@dimen/bu5"
                    android:layout_marginTop="@dimen/bu1_5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_play_closes_media_player"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_34px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu1_5"
                        android:text="@string/customize_activity_text_play_closes_media_player_description"
                        android:textColor="@color/grey77"
                        android:textSize="@dimen/text_size_28px" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_play_closes_media_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bu1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyCC" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
