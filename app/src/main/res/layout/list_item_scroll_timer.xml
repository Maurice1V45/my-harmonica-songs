<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bu4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/bu5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_time"
                android:layout_width="@dimen/bu5"
                android:layout_height="@dimen/bu3"
                android:layout_marginLeft="@dimen/bu1"
                android:background="@drawable/selector_button_generic2"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30px" />

            <ImageView
                android:layout_width="@dimen/bu2"
                android:src="@drawable/icon_arrow"
                android:layout_marginLeft="@dimen/bu1"
                android:scaleType="fitXY"
                android:layout_height="@dimen/bu2" />

            <TextView
                android:id="@+id/text_section"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bu3"
                android:layout_marginLeft="@dimen/bu1"
                android:background="@drawable/selector_button_generic2"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingBottom="0dp"
                android:paddingLeft="@dimen/bu1"
                android:paddingRight="@dimen/bu1"
                android:maxLines="1"
                android:paddingTop="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30px" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_delete"
            android:layout_width="@dimen/bu4"
            android:layout_height="@dimen/bu4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/bu0_5"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/bu1_5"
                android:layout_height="@dimen/bu1_5"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_delete3" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/greyCC" />

    </RelativeLayout>

</RelativeLayout>
