<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/bu1">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="@string/restore_warning_dialog_title"
        android:textSize="@dimen/text_size_42px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bu4"
        android:layout_below="@+id/text_title"
        android:layout_marginTop="@dimen/bu2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/bu0_5"
            android:layout_weight="1"
            android:background="@drawable/selector_button_generic"
            android:text="@string/button_no"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40px" />

        <Button
            android:id="@+id/button_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bu0_5"
            android:layout_weight="1"
            android:background="@drawable/selector_button_generic"
            android:text="@string/button_yes"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40px" />
    </LinearLayout>

</RelativeLayout>
